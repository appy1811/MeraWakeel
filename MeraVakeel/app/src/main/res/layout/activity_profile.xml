<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".Profile"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="84dp">

    <EditText
        android:id="@+id/phno"
        android:layout_width="379dp"
        android:layout_height="48dp"
        android:background="@drawable/custom_edittex"
        android:drawableLeft="@drawable/phone"
        android:ems="10"
        android:hint="     Enter Phone number"
        android:inputType="textPhonetic"
        android:textColor="@color/edittextcolor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.559" />

    <EditText
        android:id="@+id/name"
        android:layout_width="379dp"
        android:layout_height="48dp"
        android:background="@drawable/custom_edittex"
        android:drawableLeft="@drawable/namee"
        android:ems="10"
        android:hint="     Enter Name"
        android:inputType="textEmailAddress"
        android:textColor="@color/edittextcolor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.373" />

    <EditText
        android:id="@+id/emailid"
        android:layout_width="379dp"
        android:layout_height="48dp"
        android:background="@drawable/custom_edittex"
        android:drawableLeft="@drawable/envelope"
        android:ems="10"
        android:hint="     Enter Email Adress"
        android:inputType="textEmailAddress"
        android:textColor="@color/edittextcolor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.467" />

    <EditText
        android:id="@+id/upass"
        android:layout_width="379dp"
        android:layout_height="48dp"
        android:background="@drawable/custom_edittex"
        android:drawableLeft="@drawable/passs"
        android:ems="10"
        android:hint="     Enter Password"
        android:inputType="textPassword"
        android:textColor="@color/edittextcolor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.654" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button"
        android:layout_width="376dp"
        android:layout_height="61dp"
        android:background="@drawable/custo_button"
        android:onClick="RegP"
        android:text="Update"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.457"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.795" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="196dp"
        android:layout_height="163dp"
        android:src="@drawable/updateprofile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.123" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="308dp"
        android:layout_height="42dp"
        android:text="Update Profile Details"
        android:textAlignment="center"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.046" />


</androidx.constraintlayout.widget.ConstraintLayout>

